{% extends 'base.html.twig' %}

{% block body %}
   <div class="navbar" style="background: #5eb5e0">
   <h3 class="m-2" style="font-family: 'Courier New', monospace !important; color: white;">Hotel Colina</h3>
   </div>
   <h1 style="text-align: center; margin: 50px">Formulario de cadastro de hospedes</h1>
   <hr>
   {% for msg in app.session.flashbag.get('notice') %}
      <div class="alert alert-success">
         <strong>{{ msg }}</strong>
      </div>
   {% endfor %}
   <form method="post" action="/cadastrar">

      <div class="container col-7">
         <div class="form-group row">
            <label class="col-form-label col-sm-2" for="nome">Nome</label>
            <div class="col-sm-10">
               <input id="nome" class="form-control" name="nome" required placeholder="nome do hospede" type="text">
            </div>
         </div>

         <div class="form-group row">
            <label class="col-form-label col-sm-2" for="rg">RG<i class="pl-3 far fa-address-card"></i></label>
            <div class="col-sm-10">
               <input id="rg" class="form-control" name="rg" required placeholder="rg do hospede" type="text">
            </div>
         </div>

         <div class="form-group row">
            <label class="col-form-label col-sm-2" for="cpf">CPF</label>
            <div class="col-sm-10">
               <input id="cpf" class="form-control" name="cpf" required placeholder="cpf do hospede" type="text">
            </div>
         </div>

         <div class="form-group row">
            <label class="col-form-label col-sm-3" for="telefone">Telefone de contato<i class="pl-3 fas fa-mobile-alt"></i></label>

            <div class="col-sm-9">
               <input id="telefone" class="form-control" placeholder="(--)---------" name="telefone" required type="tel">
            </div>
         </div>

         <div class="form-group row">
            <label class="col-form-label col-sm-3" for="entrada">Data de entrada</label>
            <div class="col-sm-9">
               <input id="entrada" class="form-control" name="entrada" required type="datetime-local">
            </div>
         </div>

         <div class="form-group row">
            <label class="col-form-label col-sm-3" for="saida">Data de saida</label>
            <div class="col-sm-9">
               <input id="saida" class="form-control" name="saida" required type="datetime-local">
            </div>
         </div>

         <div class="form-group row">
            <label class="col-form-label col-sm-2" for="quarto">Quarto<i class="pl-3 fas fa-person-booth"></i></label>
            <div class="col-sm-10">
               <select class="form-control" >
                  {%  for i in range(1, 8) %}
                  <option>
                        <li><a href="{{ i }}">quarto {{ i }}</a></li>
                  </option>
                  {% endfor %}
               </select>
            </div>
         </div>

         <div class="form-group">
            <button class="mb-4 btn btn-primary form-control" type="submit">Cadastrar</button>
         </div>
      </div>
   </form>
   </div>
{% endblock %}
